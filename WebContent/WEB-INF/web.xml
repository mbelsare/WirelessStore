<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>WirelessStore</display-name>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.OAuthServlet</servlet-class>
        <init-param>
            <param-name>clientId</param-name>
            <!-- <param-value>3MVG9A2kN3Bn17hukfJjjuh0hw1IVyXg8uSa_TpFmiuKvzvBFilzKqhVZGzTQQ7FUaU6Lh0U18oUGdKZ6GtKg</param-value> -->
            <param-value>3MVG9A2kN3Bn17hthpGtFyHl_mMNTZsJyxwIl8efygGxzdXj6jT6ncMfYBM.uZthF03.qWUAGRfKUmGIxq.SG</param-value>            
        </init-param>
        <init-param>
            <param-name>clientSecret</param-name>
            <!--<param-value>8800887673720850310</param-value>  -->
            <param-value>6502795015220671489</param-value>
        </init-param>
        <init-param>
            <param-name>redirectUri</param-name>
            <param-value>https://cmpe281_wirelessstore.aws.af.cm/oauth/_callback</param-value>
            <!-- <param-value>http://localhost:8080/WirelessStore/oauth/_callback</param-value> -->
        </init-param>
        <init-param>
            <param-name>environment</param-name>
            <param-value>https://login.salesforce.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>StoreFrontServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.StoreFrontServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductTypeServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.ProductTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cmpe.two81.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/oauth/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/oauth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreFrontServlet</servlet-name>
        <url-pattern>/store/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductTypeServlet</servlet-name>
        <url-pattern>/productType/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/logout/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/signin/*</url-pattern>
    </servlet-mapping>
</web-app>